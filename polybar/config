#### bar config ####

## top bar config ##

[bar/shadbar]
font-0 ="Ubuntu Nerd Font:pixelsize=10,0"
background = #111111
fixed-center = true
padding-right = 1
separator ="  "
ine-size = 1

# top bar modules
modules-left = title
modules-right = wifi alsa backlight batteryscript
modules-center = date


## Bottom bar config ##

[bar/shadbar2]
font-0 ="Ubuntu Nerd Font:pixelsize=10,0"
background = #111111
fixed-center = true
padding-right = 1
separator ="  "
line-size = 1
bottom = true

# bottom bar modules
modules-left = i3
modules-right = cpu memory filesystem temperature
modules-center = cmus

[bar/hdmi]
font-0 ="Ubuntu Nerd Font:pixelsize=10,0"
background = #111111
fixed-center = true
padding-right = 1
separator ="  "
