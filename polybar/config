#### polybar modules ####

[module/alsa]
type = internal/alsa
label-volume = "墳 %percentage%%"
format-volume-underline = #feb54e
label-muted = "ﱝ Muted"
master-mixer = Master
use-ui-max = true

[module/backlight]
type = internal/backlight
card = acpi_video0
format = " <label>"
format-underline = #64d0e4

[module/cpu]
type = internal/cpu
interval = 0.5
format-prefix = " "
format-underline = #fe3d02

[module/date]
type = internal/date
label = "  %date%, %time%"
date= "%a %d/%m"
time = %H:%M

[module/filesystem]
type = internal/fs
label-mounted = " %percentage_used%%"
format-mounted-underline = #64d0e4
fixed-values = true
interval = 30
mount-0 = /

[module/i3]
type = internal/i3
index-sort = true
enable-click = true
enable-scroll = true
pin-workspaces = true
strip-wsnumbers = false
reverse-scroll = false
wrapping-scroll = false
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev
fuzzy-match = true
label-mode = %mode%
label-focused = %name%
label-focused-padding = 1
label-urgent = %name%
label-urgent-padding = 1
label-unfocused = %name%
label-unfocused-padding = 1
label-focused-background = #333f44a3
label-focused-underline = #4b54cd

[module/memory]
type = internal/memory
label = "ﳔ %percentage_used%%"
format-underline = #feb54e
interval = 1

[module/temperature]
type = internal/temperature
hwmon-path = /sys/devices/virtual/hwmon/hwmon2/temp1_input
label =  %temperature-c%
format-underline = #4b54cd
thermal-zone = 0
units = true
interval = 1

[module/title]
type = internal/xwindow
label-maxlen = 35
label = "   %title%"
label-empty = "   shadowbook"
format-underline = #4b54cd

[module/wifi]
type = internal/network
format-connected-underline = #fe3d02
format-disconnected-underline = #fe3d02
label-connected = "直 %essid%"
label-disconnected = "直 OFF"
interface = wlan0
interval = 1.0

#### custom modules ####

[module/batteryscript]
type = custom/script
interval = 50
exec = sh ~/.config/polybar/batteryscript.sh
label-underline = #6bf

[module/cmus]
type = custom/script
exec = sh $HOME/.config/polybar/cmus.sh
click-left = cmus-remote --pause
click-right = cmus-remote --stop
exec-if = pgrep -x polybar
label = "  %output%"
interval = 1


